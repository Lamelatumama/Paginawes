[32m+[m[32m    contrasena VARCHAR(255) NOT NULL,[m[41m [m
[32m+[m[32m    fecha_registro TIMESTAMP DEFAULT CURRENT_TIMESTAMP[m
[32m+[m[32m);[m
[32m+[m
[32m+[m[32mCREATE TABLE compras ([m
[32m+[m[32m    id INT AUTO_INCREMENT PRIMARY KEY,[m
[32m+[m[32m    usuario_id INT NOT NULL,[m
[32m+[m[32m    fecha_compra TIMESTAMP DEFAULT CURRENT_TIMESTAMP,[m
[32m+[m[32m    detalles_productos TEXT,[m[41m [m
[32m+[m[32m    total_compra DECIMAL(10, 2) NOT NULL,[m
[32m+[m[32m    FOREIGN KEY (usuario_id) REFERENCES usuarios(id) ON DELETE CASCADE[m
[32m+[m[32m);[m
